<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:background="#333">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_music"
        android:id="@+id/albumCover"
        android:layout_gravity="center_horizontal" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="fill_parent"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Song Title"
                android:id="@+id/songName"
                android:layout_marginTop="15dp" android:textColor="#fff"
                android:maxWidth="240dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Song Artist"
                android:textSize="12dp"
                android:id="@+id/artistName"
                android:maxWidth="240dp"
                android:layout_marginTop="5dp" android:textColor="#fff"/>

        </LinearLayout>

        <Button
            android:id="@+id/upVoteButton"
            android:layout_width="2dp"
            />

        <android.support.design.widget.VisibilityAwareImageButton
            android:src="@drawable/ic_thumb"
            android:layout_width="60dp"
            android:layout_marginLeft="-72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"


            android:id="@+id/visibilityAwareImageButton" />

    </TableRow>
</LinearLayout>